<h1>Eventos</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th>Fecha</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @eventos.each do |evento| %>
  <tr>
    <td><%= evento.nombre %></td>
    <td><%= evento.descripcion %></td>
    <td><%= evento.fecha %></td>
    <td><%= link_to 'Mostrar', evento %></td>
    <td><%= link_to 'Editar', edit_evento_path(evento) %></td>
    <td><%= link_to 'Eliminar', evento, confirm: 'Esta seguro que desea eliminarlo?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />