<h1>Seleccion del mes</h1>

<%= form_tag("../eventos/mes", :method => "get") do %>
  <div class="field">
    <%= label_tag ("fecha") %><br />
	<%= select_tag(:id, options_for_select([['01'], ['02'],['03'], ['04'], ['05'],['06'], ['07'], ['08'], ['09'], ['10'], ['11'],['12']])) %>
  </div>
  <div class="actions">
    <%= submit_tag 'Buscar'%>
  </div>
<% end %>